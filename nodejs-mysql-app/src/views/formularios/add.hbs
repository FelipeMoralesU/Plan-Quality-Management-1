<div class="container p-4">
    <div class="row">
        <div class="col-md-6  mx-auto">
            <div class="card">
                <div class="card-body">
                    <form action="/formularios/add" method="POST">
                        <div class="form-group">
                            <input type="Text" class="form-control" name= "Nombredelproyecto" placeholder="Nombre del Proyecto">
                        </div>
                        <div class="form-group">
                            Inicio de periodo<input type="date" class="form-control" name="fechainicio">
                        </div>
                        <div class="form-group">
                            Termino de periodo <input type="date" class="form-control" name="fechatermino" >
                        </div>
                        <div class="from-group">
                            <input class="col-md-1" type="radio" name="radio" value="a" checked> Opt1
                            <input class="col-md-1" type="radio" name="radio" value="b"> Opt2
                            <input class="col-md-1" type="radio" name="radio" value="c"> Opt3
                        </div>
                        <div class="from-group">
                            <input type="Text" class="form-control"name="metrica1" placeholder="Metricas 1">
                        </div>
                        <div class="from-group">
                            <input type="Text" class="form-control"name="metrica2" placeholder="Metricas 2">
                        </div>
                        <div class="from-group">
                            <input type="Text" class="form-control"name="metrica3" placeholder="Metricas 3">
                        </div>
                        <div class="form-group">
                            Seleccione la opcion
                            <select name="menu" >
                                <option value="1">Uno</option>
                                <option value="2">Dos</option>
                                <option value="3">Tres</option>
                                <option value="4">Cuatro</option>
                                <option value="5">Cinco</option>
                            </select>
                        </div>
                        <div class="from-group">
                            <input class="col-md-1" type="checkbox" name="checkbox" value="opcion1"> Opcion 1
                            <input class="col-md-1" type="checkbox" name="checkbox" value="opcion2"> Opcion 2
                        </div>
                        <div class="from-group">
                            <textarea class="form-control" name="descripcion" placeholder="Descripcion" rows="5"></textarea>
                        </div>
                        <div class="from-group">
                          <button class="btn btn-success btn-lg w-100">
                              Crear Plan
                          </button>  
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>