<div class="container p-4">
    <div class="row">
        {{#each formularios}}
        <div class="cold-md-3">
            <div class="card text-centre">
                <div class="card-body">
                    <a href="{{Nombredelproyecto}}" target="_blank">
                        <h3 class="card-title text-uppercase">
                            {{Nombredelproyecto}}
                        </h3>
                    </a>
                    <p class="m-2">{{descripcion}}</p>
                    <p>{{timeago created_at}}</p>
                    <a href="/formularios/delete/{{id}}" class="btn btn-danger">Borrar Plan</a>
                    <a href="/formularios/edit/{{id}}" class="btn btn-secondary">Editar</a>
                    <a href="/formularios/download/{{id}}" method="GET" class="btn btn-secondary">Descargar Informe</a>
                </div>    
            </div>
        </div>   
        {{else}} 
        <div class="col-md4 mx-auto">
            <div class="card cardbody text-center">
                <p>No hay planes creados aun</p>
                <a href="/formularios/add"> Click aqui, para crear un plan</a>
            </div>
        </div>
        {{/each}}
    </div>
</div>